					{{#each model.articles as |article|}}
					  <div class="item">
					  	<div class="image">
					  		<img src={{article.urlToImage}} alt="">
					  	</div>
					  	<div class="content">
					  		<div class="header">{{article.title}}</div>
					  		<div class="meta">
					  			<span class="cinema">{{article.source.name}}</span>
					  		</div>
					  		<div class="description">
					  			{{article.description}}
					  		</div>
								<div class="extra">
									<a href={{article.url}} target="_blank">
										<div class="ui teal tag label">Go to Article</div>
									</a>
								</div>
					  	</div>
					  </div>
					{{/each}}
				</div>
			{{/ember-scrollable}}
		</div>
