{{#if (media "isDesktop")}}
  <div class="ui container">
    <div class="ui grid">
      <div class="one wide column">
        <div class="ui left fixed vertical labeled icon menu">
          <div class="item" id="main_heading">
            <h1 class="main_heading">
              Idyll
            </h1>
          </div>
          <br>
          <br>
          <br>
          {{#link-to "reddit" class="item"}}
            <i class="fab fa-reddit fa-2x" id="reddit"></i>
          {{/link-to}}
          {{#link-to "hacker-news" class="item"}}
            <i class="fab fa-hacker-news-square fa-2x" id="hackernews"></i>
          {{/link-to}}
          {{#link-to "product-hunt" class="item"}}
            <i class="fab fa-product-hunt fa-2x" id="producthunt"></i>
          {{/link-to}}
          {{#link-to "news" class="item"}}
            <i class="far fa-newspaper fa-2x" id="newspaper"></i>
          {{/link-to}}
          {{#link-to "youtube" class="item"}}
            <i class="fab fa-youtube fa-2x" id="youtube"></i>
          {{/link-to}}
          {{#link-to "google" class="item"}}
            <i class="fab fa-google fa-2x" id="google"></i>
          {{/link-to}}
          {{#link-to "github" class="item"}}
            <i class="fab fa-github fa-2x"  id="github"></i>
          {{/link-to}}
          <br>
          <br>
          <br>
          <br>
          <a class="item" href="https://zubeirtech.firebaseapp.com" target="_blank" rel="noopener">
            <i class="copyright icon"></i>
            ZubeirTech
          </a>
        </div>
      </div>
      <div class="fifteen wide column">
        {{outlet}}
      </div>
    </div>
  </div>
{{/if}}
